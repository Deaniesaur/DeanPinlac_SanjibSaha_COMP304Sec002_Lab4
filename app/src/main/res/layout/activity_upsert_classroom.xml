<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpsertClassroomActivity">

    <TextView
        android:id="@+id/labelAddClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Classroom"
        app:layout_constraintBottom_toTopOf="@+id/editFloor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editFloor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Floor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelAddClassroom" />

    <EditText
        android:id="@+id/editAirConditioned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Air Conditioned"
        app:layout_constraintEnd_toEndOf="@+id/editFloor"
        app:layout_constraintStart_toStartOf="@+id/editFloor"
        app:layout_constraintTop_toBottomOf="@+id/editFloor" />

    <Button
        android:id="@+id/confirmAddClassroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Confirm Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAirConditioned" />
    
</androidx.constraintlayout.widget.ConstraintLayout>